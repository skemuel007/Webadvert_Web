@model Webadvert_Web.Models.Accounts.ResetPassword

<div class="row">
    <div class="col-md-4">
        <h4>Reset Your Password</h4>
        <h5>
            <a asp-controller="Accounts" asp-action="ResetPassword">
                If you are not a member you can sign up here
            </a>
        </h5>

        <form method="post" asp-controller="Accounts" asp-action="ResetPassword">
            <h4>Password Reset</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-secondary">Reset</button>
        </form>
    </div>
</div>
