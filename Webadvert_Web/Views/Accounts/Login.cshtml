@model Webadvert_Web.Models.Accounts.LoginModel

<div class="row">
    <div class="col-md-4">
        <h4>Login usring your email address and password</h4>
        <h5>
            <a asp-controller="Accounts" asp-action="Signup">
                If you are not a member you can sign up here
            </a>
        </h5>

        <form method="post" asp-controller="Accounts" asp-action="Login">
            <h4>Create a new Account</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger">
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe"></label>
                    <input type="checkbox" asp-for="RememberMe" class="form-control" />
                    @*@Html.DisplayName("Remember Me")*@
                    @*<span asp-validation-for="RememberMe" class="text-danger"></span>*@
                </div>
            </div>

            <button type="submit" class="btn btn-secondary">Login</button>
        </form>
    </div>
</div>
